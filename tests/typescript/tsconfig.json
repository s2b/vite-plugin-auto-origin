{
    "compilerOptions": {
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "es2022",
        "verbatimModuleSyntax": false,
        "allowJs": true,
        "moduleDetection": "force",
        "strict": true,
        "noUncheckedIndexedAccess": true,

        "moduleResolution": "nodenext",
        "module": "nodenext",

        "lib": ["es2022"],
        "types": ["vite"]
    },
    "include": ["vite.config.ts"]
}
